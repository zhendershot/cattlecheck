// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ratings      Rating[]
  cattleGuards CattleGuard[]
  edits        Edit[]

  @@map("users")
}

model CattleGuard {
  id          String   @id @default(cuid())
  name        String
  description String?
  latitude    Float
  longitude   Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  createdBy   User   @relation(fields: [createdById], references: [id])
  createdById String

  ratings Rating[]
  images  Image[]
  edits   Edit[]

  averageRating Float @default(0)
  totalRatings  Int   @default(0)

  @@map("cattle_guards")
}

model Rating {
  id        String   @id @default(cuid())
  rating    Int // 1-10 scale
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Rating criteria (1-10 each)
  smoothness    Int
  scenicView    Int
  upkeep        Int
  accessibility Int
  coolnessFactor Int

  user          User        @relation(fields: [userId], references: [id])
  userId        String
  cattleGuard   CattleGuard @relation(fields: [cattleGuardId], references: [id], onDelete: Cascade)
  cattleGuardId String

  @@unique([userId, cattleGuardId]) // One rating per user per cattle guard
  @@map("ratings")
}

model Image {
  id        String   @id @default(cuid())
  url       String
  alt       String?
  createdAt DateTime @default(now())

  cattleGuard   CattleGuard @relation(fields: [cattleGuardId], references: [id], onDelete: Cascade)
  cattleGuardId String

  @@map("images")
}

model Edit {
  id        String   @id @default(cuid())
  field     String // Which field was edited
  oldValue  String?
  newValue  String?
  createdAt DateTime @default(now())

  user          User        @relation(fields: [userId], references: [id])
  userId        String
  cattleGuard   CattleGuard @relation(fields: [cattleGuardId], references: [id], onDelete: Cascade)
  cattleGuardId String

  @@map("edits")
}